// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id
  name          String
  email         String @unique
  password_hash String
  meal          Meal[]

  @@map("users")
}

model Meal {
  id          String    @id
  name        String
  description String
  in_on_diet  Boolean
  meal_date   DateTime
  created_at  DateTime
  updated_at  DateTime?
  user_id     String

  user User @relation(fields: [user_id], references: [id])

  @@map("meals")
}
